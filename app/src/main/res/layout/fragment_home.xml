<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".check_in">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/fast_logo"
        android:layout_centerHorizontal="true"/>
    <TextView

        android:layout_below="@id/logo"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check In/Out"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:layout_marginTop="70dp"
        android:layout_below="@id/text"
        android:id="@+id/checkinface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facial Sign In"
        android:textAllCaps="false"
        android:textSize="20dp"

        android:background="@drawable/button_round"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_below="@id/checkinface"
        android:id="@+id/checkinfinger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fingerprint Sign In"
        android:textAllCaps="false"
        android:textSize="20dp"

        android:background="@drawable/button_round"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


</RelativeLayout>