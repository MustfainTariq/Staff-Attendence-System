<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l1">
                <androidx.cardview.widget.CardView
                    android:id="@+id/profilephotocard"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:innerRadius="0dp"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="50dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/profilephoto"
                        android:background="@drawable/ellipse_255"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop">
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/uploadphoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0098CB"
                    android:layout_marginLeft="140dp"
                    android:textSize="12dp"
                    android:layout_marginTop="40dp"
                    android:text="Upload photo">
                </Button>

            </LinearLayout>


            <View
                android:id="@+id/block1"
                android:layout_width="300dp"
                android:layout_height="310dp"
                android:layout_below="@id/l1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:alpha="0.3"
                android:background="@drawable/shape1">
            </View>

            <TextView
                android:id="@+id/nametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/l1"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"
                android:text="Your Name"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nametext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:text="John Doe">
            </TextView>

            <TextView
                android:id="@+id/emialtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:text="Email"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emialtext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:text="siddxd@growthx.com">

            </TextView>

            <TextView
                android:id="@+id/phonetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:text="Phone Extension"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phonetext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:text="(051) 111-128-128 Ext: 101">

            </TextView>

            <TextView
                android:id="@+id/designationtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:text="Department"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/designationtext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:text="Professor">

            </TextView>

            <TextView
                android:id="@+id/departmenttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/designation"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:text="Department"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/departmenttext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:text="Computing">

            </TextView>

            <View
                android:id="@+id/block2"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_below="@id/block1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:alpha="0.3"
                android:background="@drawable/shape1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Sid"
                android:layout_below="@id/block1"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp">

            </TextView>

            <TextView
                android:id="@+id/about"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_below="@id/block1"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed euismod, diam sit amet aliquet ultricies, nisl nisl aliquam nisl, vitae aliquam nis">
            </TextView>



            <TextView
                android:id="@+id/educationtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professional Details"
                android:layout_below="@id/block2"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp">
            </TextView>

            <TextView
                android:id="@+id/education"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=">> Ph.D (Computer Science) NUCES, 2010"
                android:layout_below="@id/block2"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="40dp">

            </TextView>

            <TextView
                android:id="@+id/qualificationtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 Years"
                android:layout_below="@id/block3"
                android:layout_marginTop="55dp"
                android:textStyle="bold"
                android:layout_marginLeft="40dp">

            </TextView>

            <TextView
                android:id="@+id/qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="of total experience"
                android:layout_below="@id/block3"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="40dp">

            </TextView>

            <View
                android:id="@+id/block3"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_below="@id/block2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:alpha="0.3"
                android:background="@drawable/shape1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Experience"
                android:layout_below="@id/block3"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp">

            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/block2"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="210dp">

                <ImageView android:id="@+id/vector"
                    android:src="@drawable/vector"
                    android:contentDescription="vector"
                    android:alpha="0.5"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="9dp"
                    android:layout_width="38.8dp"
                    android:layout_height="38.8dp" />

                <ImageView android:id="@+id/vector_ek1"
                    android:src="@drawable/vector_ek1"
                    android:contentDescription="vector_ek1"
                    android:layout_marginStart="19.8dp"
                    android:layout_marginTop="21.6dp"
                    android:layout_width="31.6dp"
                    android:layout_height="31.6dp" />
            </RelativeLayout>


            <View
                android:id="@+id/block5"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@id/block3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:alpha="0.3"
                android:background="@drawable/shape1" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/img"
                android:layout_below="@id/block3"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="50dp">
            </ImageView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>